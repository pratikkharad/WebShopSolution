<style>
    .breadcrumb {
        background-color: #f8f9fa;
        padding: 10px 15px; /* Increased padding for better spacing */
        border-radius: 4px;
        margin-bottom: 15px; /* Increased margin for better separation */
    }

    .breadcrumb-item {
        font-size: 16px; /* Slightly larger font size */
        color: #6c757d;
        margin-right: 5px; /* Small margin between breadcrumb items */
    }

    .breadcrumb-item a {
        color: #007bff;
        text-decoration: none;
    }

    .breadcrumb-item.active {
        color: #343a40;
        font-weight: bold;
    }
</style>

